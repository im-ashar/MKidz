<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MKidz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MKidz.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e" crossorigin="anonymous">

</head>
<body>
    <div class="splash-screen">
        <img src="~/assets/splash.jpeg" alt="splash screen image">
    </div>

    <header>
        <partial name="_Navigation" />
    </header>
    <div class="container">
        <main id="main" role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="d-flex justify-content-center align-items-center">
        <p class="m-0 p-0">Educaties &amp; Kennis | Mkidz &copy; Rev. 1.1 </p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        window.addEventListener('load', function () {
            // Show the splash screen
            var splashScreen = document.querySelector('.splash-screen');
            splashScreen.style.display = 'flex';

            // Gradually increase the opacity of the splash screen to 1
            setTimeout(function () {
                splashScreen.style.opacity = '1';
            }, 100);

            // Hide the splash screen after 3 seconds
            setTimeout(function () {
                // Gradually decrease the opacity of the splash screen to 0
                splashScreen.style.opacity = '0';
            }, 3000);

            // Hide the splash screen after the opacity has decreased to 0
            setTimeout(function () {
                splashScreen.style.display = 'none';
            }, 4000);
        });

    </script>
</body>
</html>
